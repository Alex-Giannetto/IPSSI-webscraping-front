/* You can add global styles to this file, and also import other style files */

*
  margin 0
  padding 0
  box-sizing border-box
  font-family sans-serif
  color #fff
  outline none

body
  height 100vh
  width 100vw
  background-color #181C3A
  padding 3vh 3vw


.d-flex
  display flex

  &.flex-row
    flex-direction row

  &.flex-column
    flex-direction column

  &.justify-content-center
    justify-content center

  &.justify-content-space-between
    justify-content space-between

  &.align-items-center
    align-items center

@keyframes appear
  from
    transform scale(0)
    opacity 0
  to
    transform scale(1)
    opacity 1

.btn
  border none
  cursor pointer
  transition transform .2s
  background-color #090D28
  font-size 18px
  padding 15px 20px
  border-radius 10px
  margin-right 30px
  animation appear .2s
  user-select: none;

  &:last-child
    margin-right 0

  &:hover
    transform scale(1.05)

  &:active
    transform scale(.95)

  &--round
    border-radius 1000px
    height 45px
    width 45px

  &--gradient
    background-image linear-gradient(to right, #F06617, #E53E53)
    box-shadow 0 0 20px rgba(#000, .5)
    color #fff

.shadow
  box-shadow 0 0 10px rgba(#1C2040, 0.5)

.scroll-x
  max-width 100%
  overflow-x scroll
