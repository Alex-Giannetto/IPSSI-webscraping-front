.grid
  position: absolute;
  top: 2vw;
  bottom: 2vw;
  left: 2vw;
  width: 96vw;
  display: flex;
  flex-direction: column;

  .section
    margin: 10px;
    flex-grow: 1;
    display: flex;
    height 100%
    width 100%
    flex-direction: column;

    .scrollable-content
      flex-grow: 1;
      height 100%
      overflow: scroll;

