table
  width 100%

  thead tr
    th
      background-color: #06091d
      padding 20px 10px
      position: sticky
      top: 0
      cursor pointer

      &::selection {
        background-color: transparent;
      }

      &:first-child
        border-top-left-radius 10px

      &:last-child
        border-top-right-radius 10px

      .label
        width 100%

  tbody tr
    &:nth-child(even)
      background-color: #181c3a

    td
      padding 20px 10px
      text-align center
