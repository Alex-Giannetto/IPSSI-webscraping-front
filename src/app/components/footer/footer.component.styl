.footer
  margin-top 20px

  .title
    width 100%
    height 50px
    display flex
    justify-content center
    align-items center
    font-weight bold
    font-size 25px

  .card
    border-radius 10px
    background #0A0E29
    padding 25px 30px
    margin-top 30px
    min-width 280px
    margin-right 30px
    margin-bottom 30px
    max-width 700px
    display flex
    flex-direction column
    justify-content center
    align-items center
    height 155px
    animation appear .2s

    &.card-data
      max-width 500px
      opacity 0
      animation appear 0.2s forwards

    h1
      max-width 100%
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      font-size 30px

    h2
      font-size 20px
      text-align center

    .text-gradient
      background: linear-gradient(to right, #F06617 0%, #E53E53 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      padding-bottom 10px


  .form
    border-radius 10px
    padding 10px 20px
    background-color #090D28
    min-width 170px
    transition transform .2s
    cursor pointer
    animation appear .2s

    &:hover
      transform scale(1.1)

    &:active
      transform scale(.9)

    select
      text-align-last center
      -webkit-appearance: none;
      appearance: none;
      font-size 20px
      width 100%
      border none
      background-color transparent
      margin-left 20px
      cursor pointer

      option
        text-align center


